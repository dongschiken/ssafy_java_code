package com.ssafy.hw.day05.step03;

import java.util.Arrays;

/**
 * 도서리스트를 배열로 유지하며 관리하는 클래스
 */
public class BookManager {
	//코드를 작성해주세요. 
	public static final int MAX_SIZE = 100;
	public Book[] books = new Book[MAX_SIZE];
	public int size = 0;
	
	
	public void add(Book book) {
		if(size < MAX_SIZE) 
			books[size++] = book;
	}
	
	public void remove(String isbn) {
		// 번호를 찾아서 삭제할건데 그럼 그뒤에 있는것들로 복사해서 books에 넘겨줘야한다.
		Book[] temp = new Book[size];
		boolean check = false;
		int idx = 0;
		for (int i = 0; i < size; i++) {
			if(books[i].getIsbn().equals(isbn)) {
				System.out.println(1);
				check = true;
			}else {
				temp[idx++] = books[i];
			}
		}
		if(check)return;
		books = Arrays.copyOf(temp, idx);
	}
	
	public Book[] getList() {
		return Arrays.copyOf(books, size);
	}
	
	
}
