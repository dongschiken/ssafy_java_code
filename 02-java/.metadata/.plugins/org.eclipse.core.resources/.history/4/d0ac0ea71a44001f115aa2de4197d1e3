package com.ssafy.hw.day03.step02;

/**
 * 	알고리즘 : 2차원 배열 4방탐색	
 * 
 * 	본인 위치부터 상하좌우를 탐색
 *  dy는 행 / dx는 열 방향으로 본인위치 + 상하좌우 탐색하기 위한 배열
 *  count값에 각각의 위치에 있는 영양분 값을 더해준다.
 *  max와 비교해서 N*N번 탐색할 동안 max값을 초기화해준다.
 *  
 */

import java.io.*;
import java.util.*;

public class AppleTree {
	
	public static void main(String[] args) throws IOException, NumberFormatException {
		System.setIn(new FileInputStream("data/AppleTree.txt"));
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
		int N = Integer.parseInt(br.readLine());
		
		int[] dy = new int[] {-1, 1, 0, 0}; // 본인위치, 상 하 좌 우 탐색 y(행)
		int[] dx = new int[] {0, 0, -1, 1}; // 본인위치, 상 하 좌 우 탐색 x(열)
//		int[] dy = new int[] {0, -1, 1, 0, 0}; // 본인위치, 상 하 좌 우 탐색 y(행)
//		int[] dx = new int[] {0, 0, 0, -1, 1}; // 본인위치, 상 하 좌 우 탐색 x(열)
		int[][] arr = new int[N][N];
		
		StringTokenizer st;
		for (int i = 0; i < N; i++) {
			st = new StringTokenizer(br.readLine());
			for (int j = 0; j < N; j++) {
				arr[i][j] = Integer.parseInt(st.nextToken());
			}
		}
		
		int max = Integer.MIN_VALUE;
		for (int i = 0; i < N; i++) {
			for (int j = 0; j < N; j++) {
				int count = arr[i][j];
				for (int j2 = 0; j2 < 4; j2++) {
					int ry = i + dy[j2];
					int rx = j + dx[j2];
					if(ry >= 0 && ry < N && rx >= 0 && rx < N) {
						count += arr[ry][rx];
					}
				}
				max = Math.max(max, count);
			}
		}
		//System.out.println(Arrays.deepToString(arr));
		System.out.println(max);
	}

}

