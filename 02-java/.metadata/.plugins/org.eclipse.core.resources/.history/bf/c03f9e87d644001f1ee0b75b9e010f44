package com.ssafy.hw.day05.step03;
/**
 * BookManager 클래스를 이용하여 도서 객체 추가,삭제,조회하는 클래스
 */
public class BookTest {

	public static void main(String[] args) {
		//코드를 작성해주세요. 
		
		Book book1 = new Book();
		book1.setIsbn("21424");
		book1.setTitle("Java Pro");
		book1.setAuthor("김하나");
		book1.setPublisher("jean.kr");
		book1.setPrice(15000);
		book1.setDesc("Java 기본 문법");
		
		Book book2 = new Book("21425", "Java Pro2", "김하나", "jaen.kr", 25000, "Java 응용");
		
		BookManager bookManager = new BookManager();
		bookManager.add(book1);
		bookManager.add(book2);
		
		bookManager.remove("21424");
		System.out.println(bookManager.getList()[0]);
		//System.out.println(bookManager.searchByIsbn("21425"));
		System.out.println(bookManager.searchByIsbn("21424"));
	}
}
