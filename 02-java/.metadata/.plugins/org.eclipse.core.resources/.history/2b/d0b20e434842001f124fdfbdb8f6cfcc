package java02_variable;

public class Var02_TypeCasting {
    public static void main(String[] args) {
        
        // 형 변환 : 자료형을 바꾸는 것
    	// 1. 묵시적 형 변환
    	// - 범위가 작은 자료형 -> 범위가 큰 자료형으로 이사
    	// int -> long
    	int n1 = 100;
    	long n2 = n1;
    	
    	
    	// 2. 명시적 형 변환
    	// - 범위가 큰 자료형 -> 범위가 작은 자료형으로 이사
    	long n3 = 100L;
    	int n4 = (int) n3;
    	
    	// 리터럴
    	// - 소스코드에 값을 쓰는것
    	// 데이터 형에 따라서 값의 표기법이 다르다
    	int x1 = 100;
    	long x2 = 100L;
    	float x3 = 100f;
    	double x4 = 100d;
        System.out.println(x1 +""+x2+""+x3+""+x4);
    }
}
