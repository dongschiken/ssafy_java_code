package solved;

import java.io.*;
import java.util.*;

public class GameTest {

	public static void main(String[] args) throws NumberFormatException, IOException {
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		BufferedWriter bw = new BufferedWriter(new OutputStreamWriter(System.out));
		
		System.out.println("가위바위보 게임을 시작합니다. 아래 보기 중 하나를 고르시오");
		System.out.println();
		System.out.println("1. 5판3승");
		System.out.println("2. 3판2승");
		System.out.println("3. 1판1승");

		// 1 == 3
		// 2 == 2
		// 3 == 1
		System.out.print("번호를 입력하세요.");
		int N = Integer.parseInt(br.readLine());
		switch (N) {
		case 1:
			N = 3;
			break;
		case 2:
			N = 2;
			break;
		case 3:
			N = 1;
			break;
		}
		// 0 == 컴퓨터
		// 1 == 유저
		// 1 가위, 2 주먹, 3 보
		// 유저가 이기는 경우의 수 ==> 주먹 가위 / 보 주먹 / 가위 보 
		//						2 - 1  1    3 - 2  1     1 - 3  -2
		String temp = "";
		String temp1 = "";
		int user = 0;
		int com = 0;
		int[] win = new int[2];
		while (win[0] < N || win[1] < N) {
			System.out.print("가위바위보 중 하나 입력: ");
			temp = br.readLine();
			com = (int)(Math.random()*3)+1;
			if(com == 1) {
				temp1 = "가위";
			}else if(com == 2) {
				temp1 = "주먹";
			}else {
				temp1 = "보";
			}
			if(temp.equals("가위")) {
				user = 1;
			}else if(temp.equals("주먹")) {
				user = 2;
			}else {
				user = 3;
			}
			int battle = user - com;
			if(battle == 0) {
				win[1]++;
				win[0]++;
				System.out.println(temp1);
				System.out.println("비겻습니다!!!");
			}else if(battle == 1 || battle == -2 ) {
				win[1]++;
				System.out.println(temp1);
				System.out.println("이겼습니다!!!");
			}else{
				win[0]++;
				System.out.println(temp1);
				System.out.println("졌습니다!!!");
			}
		}
		if(win[0] == win[1]) {
			System.out.println("###비겼습니다!!!");
		}else if(win[0] < win[1]) {
			System.out.println("###유저 승!!!");
		}else {
			System.out.println("###컴퓨터 승!!!");
		}
	}
}
